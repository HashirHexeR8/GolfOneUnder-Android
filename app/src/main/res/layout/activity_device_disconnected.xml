<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDisConnectedIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_device_disconnected"
        app:layout_constraintVertical_bias="0.40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvDeviceDisconnected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device Disconnected"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="#00A428"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/ivDisConnectedIcon"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConnectDevice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:text="Connect Device"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>